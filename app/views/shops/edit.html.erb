<div class="jumbotron">
    <h1 class="wf-sawarabigothic text-center">Editing Shop</h1>
</div>

<div class="container-fluid">
    <div class="col-12 offset-md-1 col-md-10">
        <%= form_for(@shop) do |f| %>
            <% if @shop.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>
                    
                    <ul>
                        <% @shop.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <div class="form-group">
                <div class="field col-md-3">
                    <%= f.label :contributer, "投稿者" %>
                    <%= f.text_field :contributer, class: "form-control", required: true %>
                </div>
            </div>
            <div class="text-center">
                 <% if @shop.photo? %>
                    <p><%= image_tag @shop.photo_url, :class => "col-6 col-md-3" %></p>
                <% else %>
                    <p><%= image_tag "/images/default.jpg", :class => "col-6 col-md-3" %></p>
                <% end %>
            </div>
            <div class="form-group">
                <div class="field">
                    <%= f.label :photo, "写真（なしでもOK）", class: "control-label" %>
                    <%= f.file_field :photo, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <div class="field">
                    <%= f.label :name, "名前" %>
                    <%= f.text_field :name, class: "form-control", required: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="field">
                    <%= f.label :comment, "グルメコメント" %>
                    <%= f.text_area :comment, class: "form-control", required: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="actions">
                    <%= f.submit '更新', class: 'btn btn-info col-4 col-md-1' %>
                    <%= link_to '戻る', shops_path, class: "btn btn-danger col-4 col-md-1" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
        

